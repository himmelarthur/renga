{
    "version": 2,
    "regions": ["cdg1"],
    "build": {
        "env": {
            "REACT_APP_API_URL": "/api",
            "REACT_APP_POLL_INTERVAL": "10000"
        }
    },
    "env": {
        "APP_SECRET": "@app_secret",
        "MOVIE_DB_API_KEY": "@movie_db_api_key",
        "DATABASE_URL": "@database_url"
    },
    "routes": [{ "src": "/api", "dest": "/api/server.ts" }]
}
